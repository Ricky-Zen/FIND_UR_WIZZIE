<h1> <%= @user.first_name %> <%= @user.last_name %></h1>


<h2>My bookings</h2>
<ul>
  <% @bookings.each do |booking| %>
  <li>
    <%= link_to booking.activity.name, activity_path(booking.activity.id) %>
    <%= booking.date %>
    <%= booking.status %>
  </li>
<% end %>
</ul>

<h2>My activities</h2>
<ul>
    <% @activities.each do |activity| %>
    <li>
      <%= activity.name %>
       <%= link_to 'DESTROY', activity_path(activity), method: :delete %>
       <%= activity.booking.user.first_name %>

     <% end %>
     <%# @users.each do |user| %>
      <%#= user.first_name %>
     <%# end %>
    </li>
</ul>
